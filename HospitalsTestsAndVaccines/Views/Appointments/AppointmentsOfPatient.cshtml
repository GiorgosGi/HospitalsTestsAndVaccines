@model IEnumerable<HospitalsTestsAndVaccines.Models.Appointment>
@{ ViewBag.Title = "Appointments"; }

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h3>Τα Ραντεβού σας </h3>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="appointments" class=" data table table-striped no-margin">
                <thead>
                    <tr>
                        <th>Όνομα Επισκέπτη</th>
                        <th>Προϊόν</th>
                        <th>Ημερομηνία/Ώρα Ραντεβού</th>
                        <th>Πληροφορίες</th>
                        <th>Στάτους</th>
                    </tr>
                </thead>
                <tbody>
                    @{var currentlyLoggedInUserId = (((System.Security.Claims.ClaimsPrincipal)System.Web.HttpContext.Current.User).Claims).ToList()[0].Value; }
                    @foreach (var item in Model)
                    {
                        if (item.ApplicationUserId == currentlyLoggedInUserId)
                        {
                    <tr>
                        <td>@item.ApplicationUser.FirstName @item.ApplicationUser.LastName</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.StartDateTime</td>
                        <td>@item.Detail</td>
                        <td>
                            @{ if (item.Status == true)
                                {
                                    <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Approved</a> }
                                else
                                {
                                    <a href="#" style="padding: 3px 10px 3px 10px; background-color:darkorange" class="badge" readonly>Pending</a> } }
                        </td>




                        @*<td>

                            <a href="@Url.Action("PaymentWithPaypal", "Payments") " btn btn-success">Payment</a>
                        </td>*@

                        
                            
                        @*<td>
                                <a href="@Url.Action("Edit", "Appointments", new { id = item.Id })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>Edit</a>
                           </td>*@
                    </tr>
                        }
                     }
                </tbody>
            </table>

            <div>
                <strong><b>Please pay for your appointment</b></strong>
                <th>
                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                        <input type="hidden" name="cmd" value="_s-xclick">
                        <input type="hidden" name="hosted_button_id" value="T72BVP5E72ZTW">
                        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                        <img alt="" border="0" src="https://www.paypalobjects.com/el_GR/i/scr/pixel.gif" width="1" height="1">
                    </form>
                </th>
                After receiving your payment, we will confirm the approval of your request.
            </div>

            <table>
                <thead>
                    <tr>
                        <th>
                            <bold>Σημασιολογία του Στάτους</bold>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @{<a href="#" style="padding: 3px 10px 3px 10px; background-color:darkorange" class="badge" readonly>Pending</a>}
                        </td>
                        <td>
                            Το Ραντεβού σας δεν έχει εγκριθεί. Παρακαλώ περιμένετε.
                        </td>
                    </tr>
                    <tr>
                        <td>
                           @{<a href="#" style="padding: 3px 10px 3px 10px; background-color:green" class="badge" readonly>Approved</a>}
                        </td>
                        <td>
                            Το Ραντεβού σας έχει εγκριθεί.
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#appointments').DataTable();
        });
    </script>
}
